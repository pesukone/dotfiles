{
  "[json][haskell][rust]": {
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnSaveTimeout": 1000
  },
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "rust-client.disableRustup": true
}
